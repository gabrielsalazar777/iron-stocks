<div class="landing-body">
  {{>indexPartial}}
  <div class="container">
    <form class="auth-form" action="/auth/register" method="post">
      {{#if email}}

        <div class="form-floating space-above">
          <input
            class="form-control border-5"
            id="email"
            type="email"
            name="email"
            value={{email}}
          />
          <label for="email" class="form-label"></label>
        </div>

        <div class="form-floating space-above">
          <input
            class="form-control border-5"
            id="username"
            type="text"
            name="username"
            value={{username}}
          />
          <label for="username" class="form-label"></label>
        </div>

        <div class="form-floating space-above">
          <input
            class="form-control border-5"
            id="passwordClear"
            type="password"
            name="passwordClear"
            placeholder="********"
          />
          <label for="passwordClear" class="form-label"></label>
        </div>

      {{else}}

        <div class="form-floating space-above">
          <input
            class="form-control border-5"
            id="email"
            type="email"
            name="email"
            placeholder="user@domain.com"
          />
          <label for="email" class="form-label">Email Address</label>
        </div>

        <div class="form-floating space-above">
          <input
            class="form-control border-5"
            id="username"
            type="text"
            name="username"
            placeholder="User Name"
          />
          <label for="username" class="form-label">Username</label>
        </div>

        <div class="form-floating space-above">
          <input
            class="form-control border-5"
            id="passwordClear"
            type="password"
            name="passwordClear"
            placeholder="********"
          />
          <label for="passwordClear" class="form-label">Password</label>
        </div>

      {{/if}}
      <div class="row">
        <div class="col-12 d-flex justify-content-center">
          <button
            class="btn btn-light btn-outline-primary space-above"
            type="submit"
          >
            Create Account
          </button>
        </div>
      </div>

      {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
      {{/if}}
    </form>
  </div>
</div>
